# Beam Configuration Template
# Copy this file to .env.local and fill in your values

# =============================================================================
# CONVEX BACKEND (Required)
# =============================================================================
# Get these from https://dashboard.convex.dev
CONVEX_DEPLOYMENT=your-convex-deployment-name
NEXT_PUBLIC_CONVEX_URL=https://your-deployment.convex.cloud

# =============================================================================
# ABLY REAL-TIME MESSAGING (Required)
# =============================================================================
# Get your API key from https://ably.com
ABLY_SECRET_KEY=your-ably-secret-key-here

# =============================================================================
# ENCRYPTION (Required)
# =============================================================================
# Generate a secure random key: openssl rand -base64 32
DATA_ENCRYPTION_KEY=your-32-byte-base64-encryption-key

# =============================================================================
# TUNNEL SERVER CONFIGURATION
# =============================================================================
TUNNEL_SERVER_PORT=3001
TUNNEL_SERVER_HOST=localhost

# =============================================================================
# DOMAIN CONFIGURATION (Optional)
# =============================================================================
# Your custom domain for tunnels (e.g., tunnels.yourdomain.com)
BASE_DOMAIN=yourdomain.com

# =============================================================================
# SSL CONFIGURATION (For Production)
# =============================================================================
# SSL certificate paths for nginx
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Wildcard certificate for subdomains
WILDCARD_SSL_CERT_PATH=/etc/nginx/ssl/wildcard-cert.pem
WILDCARD_SSL_KEY_PATH=/etc/nginx/ssl/wildcard-key.pem

# =============================================================================
# DATABASE CONFIGURATION (Optional - for PostgreSQL alternative)
# =============================================================================
# If you want to use PostgreSQL instead of Convex
DATABASE_URL=postgresql://beam:password@localhost:5432/beam
POSTGRES_PASSWORD=your-secure-postgres-password

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
NODE_ENV=development
DEBUG=beam:*

# =============================================================================
# OPTIONAL FEATURES
# =============================================================================
# Enable request logging
ENABLE_REQUEST_LOGGING=true

# Maximum tunnel connections per user
MAX_TUNNELS_PER_USER=10

# Tunnel timeout in minutes
TUNNEL_TIMEOUT_MINUTES=60

# Rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=20
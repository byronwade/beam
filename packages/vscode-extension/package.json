{
  "name": "beam-tunnels",
  "displayName": "Beam Tunnels",
  "description": "Expose your local development server to the internet with one click",
  "version": "0.1.0",
  "publisher": "byronwade",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "tunnel",
    "ngrok",
    "cloudflare",
    "localhost",
    "development"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "beam.startTunnel",
        "title": "Beam: Start Tunnel",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "beam.stopTunnel",
        "title": "Beam: Stop Tunnel",
        "icon": "$(debug-stop)"
      },
      {
        "command": "beam.copyUrl",
        "title": "Beam: Copy Tunnel URL",
        "icon": "$(copy)"
      },
      {
        "command": "beam.openDashboard",
        "title": "Beam: Open Dashboard",
        "icon": "$(link-external)"
      },
      {
        "command": "beam.showQRCode",
        "title": "Beam: Show QR Code",
        "icon": "$(device-mobile)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "beam",
          "title": "Beam Tunnels",
          "icon": "resources/beam-icon.svg"
        }
      ]
    },
    "views": {
      "beam": [
        {
          "id": "beamTunnels",
          "name": "Active Tunnels"
        }
      ]
    },
    "configuration": {
      "title": "Beam Tunnels",
      "properties": {
        "beam.defaultPort": {
          "type": "number",
          "default": 3000,
          "description": "Default port to expose"
        },
        "beam.autoStart": {
          "type": "boolean",
          "default": false,
          "description": "Automatically start tunnel when workspace opens"
        },
        "beam.showStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show tunnel status in status bar"
        },
        "beam.copyOnStart": {
          "type": "boolean",
          "default": true,
          "description": "Copy tunnel URL to clipboard when tunnel starts"
        }
      }
    },
    "menus": {
      "view/title": [
        {
          "command": "beam.startTunnel",
          "when": "view == beamTunnels",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "beam.copyUrl",
          "when": "view == beamTunnels && viewItem == tunnel",
          "group": "inline"
        },
        {
          "command": "beam.stopTunnel",
          "when": "view == beamTunnels && viewItem == tunnel",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "publish": "vsce publish",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^2.22.0",
    "typescript": "^5.3.0",
    "vitest": "^2.1.4"
  },
  "dependencies": {
    "execa": "^8.0.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/byronwade/beam"
  }
}

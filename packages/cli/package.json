{
  "name": "@byronwade/beam",
  "version": "1.1.29",
  "description": "Expose localhost to the internet in seconds. Zero-config tunneling for Next.js, Vite, Astro, and more.",
  "license": "AGPL-3.0",
  "author": "Byron Wade",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/byronwade/beam.git"
  },
  "bin": {
    "beam": "./bin/beam.js"
  },
  "main": "dist/index.js",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./next": {
      "import": "./dist/frameworks/nextjs/index.js",
      "types": "./dist/frameworks/nextjs/index.d.ts"
    },
    "./vite": {
      "import": "./dist/frameworks/vite/index.js",
      "types": "./dist/frameworks/vite/index.d.ts"
    },
    "./astro": {
      "import": "./dist/frameworks/astro/index.js",
      "types": "./dist/frameworks/astro/index.d.ts"
    },
    "./remix": {
      "import": "./dist/frameworks/vite/index.js",
      "types": "./dist/frameworks/vite/index.d.ts"
    }
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "start": "node dist/index.js",
    "postinstall": "node dist/auto-setup.js || true",
    "lint": "eslint .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build",
    "publish:public": "npm publish --access public"
  },
  "keywords": [
    "tunnel",
    "beam",
    "localhost",
    "expose",
    "ngrok",
    "localtunnel",
    "nextjs",
    "vite",
    "astro",
    "remix",
    "webhook",
    "development",
    "dev-server"
  ],
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "commander": "^12.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "@types/qrcode-terminal": "^0.12.2",
    "eslint": "^9",
    "tsup": "^8.3.5",
    "tsx": "^4.19.0",
    "typescript": "^5.7.2",
    "vitest": "^2.1.4"
  }
}